{
  "family": "nodejs-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "containerDefinitions": [
    {
      "name": "nodejs-container",
      "image": "<your-aws-account-id>.dkr.ecr.<region>.amazonaws.com/${{ secrets.ECR_REPOSITORY }}:latest",
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "essential": true
    }
  ]
}
